                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:drawablePadding="@dimen/fab_margin"
                android:ems="10"
                android:hint="Digite o valor em Real"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="10"
                android:singleLine="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"

                tools:drawingCacheQuality="high" />

            <EditText
                android:id="@+id/et_base_frete_dolar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:drawablePadding="@dimen/fab_margin"
                android:drawingCacheQuality="high"
                android:ems="10"
                android:hint="Digite o valor em Dólar"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:maxLength="9"
                app:layout_constraintEnd_toStartOf="@+id/et_base_frete_real"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:drawablePadding="@dimen/fab_margin"
                android:drawingCacheQuality="high"
                android:ems="10"
                android:hint="Digite o nome do produto"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/et_base_frete_real"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:ems="10"
                android:focusable="false"
                android:hint="R$"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:textColor="@android:color/holo_red_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/et_base_frete_dolar"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/dolar18"
                android:drawableEnd="@drawable/asterisco18"
                android:drawablePadding="2dp"
                android:drawingCacheQuality="high"
                android:text="Cotação do Dólar (R$)"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:drawingCacheQuality="high"
                android:gravity="center_horizontal"
                android:text="Escolha a foto do produto"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:drawableStart="@drawable/frete18"
                android:drawableEnd="@drawable/asterisco18"
                android:drawablePadding="8dp"
                android:drawingCacheQuality="high"
                android:text="Frete por KG - Valor USA ($)"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_cotacao_dolar" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:drawableStart="@drawable/produto18"
                android:drawableEnd="@drawable/asterisco18"
                android:drawablePadding="8dp"
                android:drawingCacheQuality="high"
                android:text="Produto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_base_frete_dolar" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:drawableStart="@drawable/star_five18"
                android:drawableEnd="@drawable/asterisco18"
                android:drawablePadding="8dp"
                android:drawingCacheQuality="high"
                android:text="Condição"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText4" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:drawableStart="@drawable/mais_menos18"
                android:drawableEnd="@drawable/asterisco18"
                android:drawablePadding="8dp"
                android:drawingCacheQuality="high"
                android:text="Quantidade"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spn_conditions" />

            <ImageButton
