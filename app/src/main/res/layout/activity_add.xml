                android:text="Libras"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/et_valor_lance_dolar3"
                app:layout_constraintTop_toBottomOf="@+id/et_valor_lance_dolar3" />

            <EditText
