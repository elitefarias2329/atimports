                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:drawablePadding="@dimen/fab_margin"
                android:drawingCacheQuality="high"
                android:ems="10"
                android:hint="Digite o valor em Dólar"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:maxLength="9"
                app:layout_constraintEnd_toStartOf="@+id/et_base_frete_real"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/et_valor_lance_dolar2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:drawablePadding="@dimen/fab_margin"
                android:drawingCacheQuality="high"
                android:ems="10"
                android:hint="Digite o Peso"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:maxLength="9"
                android:text="1"
                app:layout_constraintEnd_toStartOf="@+id/et_valor_lance_dolar3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/et_valor_lance_dolar3"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:drawablePadding="@dimen/fab_margin"
                android:drawingCacheQuality="high"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:maxLength="9"
                android:text="0,453592"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                tools:targetApi="o" />

            <EditText
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
